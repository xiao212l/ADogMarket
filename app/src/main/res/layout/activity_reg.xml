<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:padding="@dimen/middlePadding">


        <pv.com.pvcloudgo.vc.widget.ClearEditText
            android:id="@+id/edittxt_phone"
            style="@style/editText_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:hint="请输入手机号码（必填）"
            android:inputType="phone" />

        <View style="@style/line_vertical"

            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/smallPadding"
            android:paddingBottom="@dimen/smallPadding">

            <pv.com.pvcloudgo.vc.widget.ClearEditText
                android:id="@+id/edittxt_username"
                style="@style/editText_base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:hint="请输入用户名（必填）" />

        </LinearLayout>

        <View style="@style/line_vertical"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/smallPadding"
            android:paddingBottom="@dimen/smallPadding">


            <pv.com.pvcloudgo.vc.widget.ClearEditText
                android:id="@+id/edittxt_pwd"
                style="@style/editText_base"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:hint="请输入密码（必填）"
                android:inputType="textPassword" />


        </LinearLayout>

        <View style="@style/line_vertical"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/smallPadding"
            android:paddingBottom="@dimen/smallPadding">


            <pv.com.pvcloudgo.vc.widget.ClearEditText
                android:id="@+id/edittxt_email"
                style="@style/editText_base"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:hint="请输入邮箱"
                android:inputType="textPassword" />


        </LinearLayout>

        <View style="@style/line_vertical"

            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/smallPadding"
            android:paddingBottom="@dimen/smallPadding">


            <pv.com.pvcloudgo.vc.widget.ClearEditText
                android:id="@+id/edittxt_id"
                style="@style/editText_base"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:hint="请输入身份证号"
                android:inputType="textPassword" />


        </LinearLayout>

        <View style="@style/line_vertical"

            />


    </LinearLayout>


    <Button
        android:id="@+id/ac_reg_btn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/largePadding"
        android:layout_marginTop="40dp"
        android:layout_marginRight="@dimen/largePadding"
        android:text="注册" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="点击注册，表示你同意《用户协议》"
        android:textColor="@color/border_color"
        android:textSize="12sp"

        />


</LinearLayout>