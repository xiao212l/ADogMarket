<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    tools:showIn="@layout/fragment_mine"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/middlePadding"
        android:background="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mine_history"
            style="@style/customMineTextBlackGray"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/middlePadding"
            android:layout_marginBottom="@dimen/middlePadding"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_m_history"
            android:drawablePadding="@dimen/smallerPadding"
            android:gravity="center_horizontal"
            android:text="历史浏览"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/mine_goods_favor"
            style="@style/customMineTextBlackGray"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/middlePadding"
            android:layout_marginBottom="@dimen/middlePadding"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_m_good_favor"
            android:drawablePadding="@dimen/smallerPadding"
            android:gravity="center_horizontal"
            android:text="商品收藏"
            android:textColor="@color/black" />

        <!--<TextView-->
            <!--android:id="@+id/mine_shop_favor"-->
            <!--style="@style/customMineTextBlackGray"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_marginTop="@dimen/middlePadding"-->
            <!--android:layout_marginBottom="@dimen/middlePadding"-->
            <!--android:layout_weight="1"-->
            <!--android:drawableTop="@drawable/ic_m_shop_favor"-->
            <!--android:drawablePadding="@dimen/smallerPadding"-->
            <!--android:gravity="center_horizontal"-->
            <!--android:text="店铺收藏"-->
            <!--android:textColor="@color/black" />-->

        <TextView
            android:id="@+id/mine_ticket"
            style="@style/customMineTextBlackGray"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/middlePadding"
            android:layout_marginBottom="@dimen/middlePadding"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_m_ticket"
            android:drawablePadding="@dimen/smallerPadding"
            android:gravity="center_horizontal"
            android:text="优惠券"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/mine_address"
            style="@style/customMineTextBlackGray"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/middlePadding"
            android:layout_marginBottom="@dimen/middlePadding"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_m_address"
            android:drawablePadding="@dimen/smallerPadding"
            android:gravity="center_horizontal"
            android:text="收货地址"
            android:textColor="@color/black" />
    </LinearLayout>
</LinearLayout>